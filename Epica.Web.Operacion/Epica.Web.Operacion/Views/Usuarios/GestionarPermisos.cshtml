@model List<Epica.Web.Operacion.Models.Response.LoginResponse>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section LogoPage{
    <i class="bi bi-card fs-1 w-40px"></i>
}
@section breadcrumb{
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        Usuarios
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        Gestionar Permisos
    </li>
}

<div class="col-md-12">
    <div class="card card-flush h-lg-100">
        <div class="card-header border-0 pt-6">
            <div class="card-title">
                <div class="d-flex align-items-center position-relative my-1">
                    <span class="svg-icon svg-icon-1 position-absolute ms-6">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                            <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                        </svg>
                    </span>
                    <input type="text" id="search_input" data-kt-customer-table-filter="search" class="form-control form-control-sm form-control-solid w-250px ps-15" placeholder="Buscar...">
                </div>
            </div>
            <div class="card-toolbar">
                <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">

                    <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                        <div class="m-0">
                            <button data-bs-toggle="modal" data-bs-target="#nuevoRolModal" class="btn btn-sm btn-primary me-3">
                                <i class="bi bi-plus-lg"></i>&nbsp;Crear Nuevo Rol
                            </button>
                        </div>
                        <div id="kt_datatable_buttons" class="d-none"></div>
                    </div>
                </div>
            </div>
        </div>


        <div class="card-body pt-5">
            <div class="bottom-buffer">
                <div class="datatable datatable-bordered datatable-head-custom">
                    <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_datatable_user">
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="nuevoRolModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header header-modal">
                <h1 class="modal-title text-header-modal fs-5" id="modalLabelTitle">Crear Nuevo Rol</h1>
                <button type="button" class="custom-close-button" data-bs-dismiss="modal" aria-label="Close">
                    <span>✕</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="px-7 py-5">
                    <div class="mb-5">
                        <label class="form-label fs-5 fw-semibold mb-3">Nombre del Rol:</label>
                        <input class="form-control form-control-sm fw-bold crear-control" data-crear="descripcionRol" placeholder="Nombre del Rol" id="create_rol" />
                    </div>                 
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-light me-3 btn-sm" data-bs-dismiss="modal" id="btnCerrarCuenta">Cerrar</button>
                <button type="button" class="btn btn-light-primary me-3 btn-sm" id="GuardarRol">Guardar Rol</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Usuarios/epica.usuarios.permisos.js" asp-append-version="true"></script>
}
<style>

    .header-modal {
        display: flex;
        text-align: center;
        justify-content: center;
    }

    .text-header-modal {
        color: white;
    }

    .custom-close-button {
        color: white;
        background-color: transparent;
        border: none;
        opacity: 1;
        padding: 0;
        font-size: 1rem;
        line-height: 1;
        cursor: pointer;
        transition: color 0.3s, opacity 0.3s;
        position: absolute;
        right: 0;
        padding: 21px;
    }

        .custom-close-button:hover {
            opacity: 0.8;
        }
</style>
