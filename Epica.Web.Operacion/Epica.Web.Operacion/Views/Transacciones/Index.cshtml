@model Epica.Web.Operacion.Models.Response.LoginResponse

@{
    ViewData["Title"] = "Transacciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section LogoPage{
    <i class="bi bi-card fs-1 w-40px"></i>
}
@section breadcrumb{
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        Transacciones
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        Mis Transacciones
    </li>
}

<div class="col-md-12">
    <div class="card card-flush h-lg-100">
        <div class="card-header border-0 pt-6">
            <div class="card-title">
                <div class="d-flex align-items-center position-relative my-1">
                    <span class="svg-icon svg-icon-1 position-absolute ms-6">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                            <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                        </svg>
                    </span>
                    <input type="text" id="search_input" data-kt-customer-table-filter="search" class="form-control form-control-sm form-control-solid w-250px ps-15" placeholder="Buscar...">
                </div>
            </div>
            <div class="card-toolbar">
                <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">

                    <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">

                        <button type="button" class="btn btn-sm btn-light-primary me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                            <span class="svg-icon svg-icon-2">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M19.0759 3H4.72777C3.95892 3 3.47768 3.83148 3.86067 4.49814L8.56967 12.6949C9.17923 13.7559 9.5 14.9582 9.5 16.1819V19.5072C9.5 20.2189 10.2223 20.7028 10.8805 20.432L13.8805 19.1977C14.2553 19.0435 14.5 18.6783 14.5 18.273V13.8372C14.5 12.8089 14.8171 11.8056 15.408 10.964L19.8943 4.57465C20.3596 3.912 19.8856 3 19.0759 3Z" fill="currentColor" />
                                </svg>
                            </span>
                            Filtros
                        </button>
                        <div class="menu menu-sub menu-sub-dropdown w-300px w-md-325px" data-kt-menu="true" id="kt-toolbar-filter">
                            <div class="px-7 py-5">
                                <div class="fs-4 text-dark fw-bold">Filtros</div>
                            </div>
                            <div class="separator border-gray-200"></div>

                            <div class="px-7 py-5">
                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Clave de Rastreo:</label>
                                    <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="claveRastreo" placeholder="Clave de Rastreo" id="filtro_clave_rastreo" />
                                </div>
                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Id Interno:</label>
                                    <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="idInterno" placeholder="Id Interno" id="filtro_id_interno" />
                                </div>
                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Nombre de la cuenta:</label>
                                    <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="nombreCuenta" placeholder="Nombre de la cuenta" id="filtro_nombre_cuenta" />
                                </div>
                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Institución:</label>
                                    <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="institucion" placeholder="Institución" id="filtro_institucion" />
                                </div>
                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Monto:</label>
                                    <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="monto" placeholder="Monto" id="filtro_monto" />
                                </div>
                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Estatus:</label>
                                    <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="estatus" placeholder="Estatus" id="filtro_estatus" />
                                </div>
                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Concepto:</label>
                                    <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="concepto" placeholder="Concepto" id="filtro_concepto" />
                                </div>
                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Medio de Pago:</label>
                                    <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="medioPago" placeholder="Medio de Pago" id="filtro_medio_pago" />
                                </div>
                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Tipo:</label>
                                    <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="tipo" placeholder="Tipo" id="filtro_tipo" />
                                </div>
                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Fecha:</label>
                                    <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="fecha" placeholder="Fecha" id="filtro_fecha" />
                                </div>
@*                                <div class="mb-5">
                                    <label class="form-label fs-5 fw-semibold mb-3">Tipo:</label>
                                    <select class="form-select form-select-sm form-select-solid fw-bold filtro-control filtro-control-select" data-filtrar="tipo" data-kt-select2="true" data-placeholder="Seleciona una opción" data-allow-clear="true" id="filtro_tipo">
                                        <option></option>
                                        <option value="Credito">Credito</option>
                                        <option value="Debito">Debito</option>
                                    </select>
                                </div>*@

                                <div class="d-flex justify-content-end">
                                    <button type="reset" class="btn btn-sm btn-light btn-active-light-primary me-2 btn_limpiar_filtros" data-kt-menu-dismiss="true" data-kt-customer-table-filter="reset">Limpiar</button>
                                    <button type="submit" class="btn btn-sm btn-primary btn-filtrar" data-kt-menu-dismiss="true" data-kt-customer-table-filter="filter">Aplicar</button>
                                </div>
                            </div>
                        </div>
                        <div class="m-0">
                            <button type="button" class="btn btn-sm btn-light-primary me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                <span>
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <rect opacity="0.3" width="12" height="2" rx="1" transform="matrix(0 -1 -1 0 12.75 19.75)" fill="currentColor" />
                                        <path d="M12.0573 17.8813L13.5203 16.1256C13.9121 15.6554 14.6232 15.6232 15.056 16.056C15.4457 16.4457 15.4641 17.0716 15.0979 17.4836L12.4974 20.4092C12.0996 20.8567 11.4004 20.8567 11.0026 20.4092L8.40206 17.4836C8.0359 17.0716 8.0543 16.4457 8.44401 16.056C8.87683 15.6232 9.58785 15.6554 9.9797 16.1256L11.4427 17.8813C11.6026 18.0732 11.8974 18.0732 12.0573 17.8813Z" fill="currentColor" />
                                        <path opacity="0.3" d="M18.75 15.75H17.75C17.1977 15.75 16.75 15.3023 16.75 14.75C16.75 14.1977 17.1977 13.75 17.75 13.75C18.3023 13.75 18.75 13.3023 18.75 12.75V5.75C18.75 5.19771 18.3023 4.75 17.75 4.75L5.75 4.75C5.19772 4.75 4.75 5.19771 4.75 5.75V12.75C4.75 13.3023 5.19771 13.75 5.75 13.75C6.30229 13.75 6.75 14.1977 6.75 14.75C6.75 15.3023 6.30229 15.75 5.75 15.75H4.75C3.64543 15.75 2.75 14.8546 2.75 13.75V4.75C2.75 3.64543 3.64543 2.75 4.75 2.75L18.75 2.75C19.8546 2.75 20.75 3.64543 20.75 4.75V13.75C20.75 14.8546 19.8546 15.75 18.75 15.75Z" fill="currentColor" />
                                    </svg>
                                </span>
                                Descargar Reporte
                            </button>
                            <div id="kt_datatable_export_menu" class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4" data-kt-menu="true">
                                <div class="menu-item px-3">
                                    <a href="#" class="menu-link px-3" data-kt-export="excel">
                                        Exportar a Excel
                                    </a>
                                </div>
                            </div>
                        </div>
                        @if (Model?.AccionesPorModulo.Any(modulo => modulo.Modulo == "Transacciones" && modulo.Acciones.Contains("Insertar")) == true)
                        {
                            <div id="kt_datatable_buttons" class="d-none"></div>
                            <a asp-action="Registro" asp-controller="Transacciones" class="btn btn-sm btn-primary me-3">
                                <i class="bi bi-plus-lg"></i>&nbsp;Nueva transacción
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>


        <div class="card-body pt-5">
            <div class="bottom-buffer">
                <div class="datatable datatable-bordered datatable-head-custom">
                    <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_datatable_movements">
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="newTransaccionModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Crear Transacción</h3>
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <span class="svg-icon svg-icon-1"></span>
                </div>
            </div>
            <div class="modal-body">
                <div class="px-7 py-5">
                    <div class="mb-5">
                        <label class="form-label fs-5 fw-semibold mb-3">Clave de Rastreo:</label>
                        <input class="form-control form-control-sm fw-bold crear-control" data-crear="claveRastreo" placeholder="Clave de Rastreo" id="create_clave_rastreo" />
                    </div>
                    <div class="mb-5">
                        <label class="form-label fs-5 fw-semibold mb-3">Cuenta Ordenante:</label>
                        <input type="number" class="form-control form-control-sm fw-bold crear-control" min="0" data-crear="cuentaOrdenante" placeholder="Cuenta Ordenante" id="create_cuenta_ordenante" />
                    </div>
                    <div class="mb-5">
                        <label class="form-label fs-5 fw-semibold mb-3">Cuenta Beneficiario:</label>
                        <input type="number" class="form-control form-control-sm fw-bold crear-control" min="0" data-crear="cuentaBeneficiario" placeholder="Cuenta Beneficiario" id="create_cuenta_beneficiario" />
                    </div>
                    <div class="mb-5">
                        <label class="form-label fs-5 fw-semibold mb-3">Monto:</label>
                        <input type="number" class="form-control form-control-sm fw-bold crear-control" min="0" data-crear="monto" placeholder="Monto Transacción" id="create_monto" />
                    </div>
                    <div class="mb-5">
                        <label class="form-label fs-5 fw-semibold mb-3">Concepto:</label>
                        <input class="form-control form-control-sm fw-bold crear-control" data-crear="concepto" placeholder="Concepto" id="create_concepto" />
                    </div>
                    <div class="mb-5">
                        <label class="form-label fs-5 fw-semibold mb-3">Tipo de Operación:</label>
                        <select class="form-select form-select-sm form-select-solid fw-bold filtro-control filtro-control-select" data-crear="tipoOperacion" data-kt-select2="true" data-placeholder="Seleciona una opción" data-allow-clear="true" id="create_tipo_Operacion">
                            <option></option>
                            <option value="1">IN</option>
                            <option value="2">OUT</option>
                            <option value="3">Comisión</option>
                        </select>
                    </div>
                    <div class="mb-5">
                        <label class="form-label fs-5 fw-semibold mb-3">Medio de Pago:</label>
                        <input class="form-control form-control-sm fw-bold crear-control" data-crear="medioPago" placeholder="Medio de Pago" id="create_medio_pago" />
                    </div>
                    <div class="mb-5">
                        <label class="form-label fs-5 fw-semibold mb-3">Comisión:</label>
                        <select class="form-select form-select-sm form-select-solid fw-bold filtro-control filtro-control-select" data-crear="comision" data-kt-select2="true" data-placeholder="Seleciona una opción" data-allow-clear="true" id="create_comision">
                            <option></option>
                            <option value="0">Sin Comisión</option>
                            <option value="1">Con Comisión</option>
                        </select>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal" id="btnCerrarCuenta">Cerrar</button>
                <button type="button" class="btn btn-light-primary" id="GuardarTransaccion">Guardar Transacción</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script asp-append-version="true" src="~/js/components/accounting.js"></script>
    <script src="~/js/transacciones/transacciones.js" asp-append-version="true"></script>
    <script>
        var AccountId = '@ViewBag.AccountID';
    </script>
}
