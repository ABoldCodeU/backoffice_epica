@model Epica.Web.Operacion.Models.ViewModels.TransaccionEditarViewModel

@{
    ViewData["Title"] = ViewBag.TituloForm;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section LogoPage{
    <i class="bi bi-cash fs-1 w-40px"></i>
}

@section breadcrumb{
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        <a class="text-muted" asp-controller="Transacciones" asp-action="Index">Transacciones</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        @ViewData["Title"]
    </li>
}

<form asp-controller="Transacciones" asp-action="@ViewBag.Accion" method="post">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.TituloForm</h3>
                <div class="separator separator-dashed border-light-secondary my-2"></div>
                <div class="card-toolbar">
                    <button href="javascript:void(0)" onclick="history.back();" type="button" class="btn btn-sm btn-light-primary me-2">
                        Cancelar
                    </button>
                    <button type="button" class="btn btn-sm btn-light-primary me-2" id="btnGuardarTransaccion">
                        Guardar
                    </button>
                </div>
            </div>
            <div class="card-body pt-5">
                <input asp-for="@Model.TransacccionDetalles.IdTrasaccion class=" form-control form-control-sm form-control-solid" id="IdTrasaccion" type="hidden" value="@(Model?.TransacccionDetalles.IdTrasaccion ?? 0)" autocomplete="off" />
            </div>
            <div class="card-body pt-5">
                <div class="d-flex mb-6 mt-6">
                    <div class="py-2 px-4 col-md-4 fv-row">
                        <label class="form-label required">Clave de rastreo: &nbsp;</label>
                        <div class="position-relative">
                            <input asp-for="@Model.TransacccionDetalles.ClaveRastreo" class="form-control form-control-sm form-control-solid" id="ClaveRastreo" type="text" value="@(Model?.TransacccionDetalles.ClaveRastreo ?? "")" autocomplete="off" required />
                            <span asp-validation-for="@Model.TransacccionDetalles.ClaveRastreo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="py-2 px-4 col-md-4 fv-row">
                        <label class="form-label required">Nombre ordenante: &nbsp;</label>
                        <div class="position-relative">
                            <input asp-for="@Model.TransacccionDetalles.NombreOrdenante" class="form-control form-control-sm form-control-solid" id="NombreOrdenante" type="text" value="@(Model?.TransacccionDetalles.NombreOrdenante ?? "")" autocomplete="off" required />
                            <span asp-validation-for="@Model.TransacccionDetalles.NombreOrdenante" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="py-2 px-4 col-md-4 fv-row">
                        <label class="form-label required">Cuenta origen ordenante: &nbsp;</label>
                        <div class="position-relative">
                            <input asp-for="@Model.TransacccionDetalles.CuentaOrigenOrdenante" class="form-control form-control-sm form-control-solid" id="CuentaOrigenOrdenante" type="text" value="@(Model?.TransacccionDetalles.NoCuentaBeneficiario ?? "")" autocomplete="off" required />
                            <span asp-validation-for="@Model.TransacccionDetalles.CuentaOrigenOrdenante" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex mb-6 mt-6">
                    <div class="py-2 px-4 col-md-4 fv-row">
                        <label class="form-label required">Nombre beneficiario: &nbsp;</label>
                        <div class="position-relative">
                            <input asp-for="@Model.TransacccionDetalles.NombreBeneficiario" class="form-control form-control-sm form-control-solid" id="NombreBeneficiario" type="text" value="@(Model?.TransacccionDetalles.NombreBeneficiario)" autocomplete="off" required />
                            <span asp-validation-for="@Model.TransacccionDetalles.NombreBeneficiario" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="py-2 px-4 col-md-4 fv-row">
                        <label class="form-label required">Cuenta beneficiario: &nbsp;</label>
                        <div class="position-relative">
                            <input asp-for="@Model.TransacccionDetalles.NoCuentaBeneficiario" class="form-control form-control-sm form-control-solid" id="NoCuentaBeneficiario" type="text" value="@(Model?.TransacccionDetalles.NoCuentaBeneficiario ?? "")" autocomplete="off" required />
                            <span asp-validation-for="@Model.TransacccionDetalles.NoCuentaBeneficiario" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="py-2 px-4 col-md-4 fv-row">
                        <label class="form-label required">Cuenta destino beneficiario: &nbsp;</label>
                        <div class="position-relative">
                            <input asp-for="@Model.TransacccionDetalles.CuentaDestinoBeneficiario" class="form-control form-control-sm form-control-solid" id="CuentaDestinoBeneficiario" type="text" value="@(Model?.TransacccionDetalles.CuentaDestinoBeneficiario ?? "")" autocomplete="off" required />
                            <span asp-validation-for="@Model.TransacccionDetalles.CuentaDestinoBeneficiario" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex mb-6 mt-6">
                    <div class="py-2 px-4 col-md-4 fv-row">
                        <label class="form-label required">Concepto: &nbsp;</label>
                        <div class="position-relative">
                            <input asp-for="@Model.TransacccionDetalles.Concepto" class="form-control form-control-sm form-control-solid" id="Concepto" type="text" value="@(Model?.TransacccionDetalles.Concepto ?? "")" autocomplete="off" required />
                            <span asp-validation-for="@Model.TransacccionDetalles.Concepto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="py-2 px-4 col-md-4 fv-row">
                        <label class="form-label required">Fecha de operación: &nbsp;</label>
                        <div class="position-relative">
                            <input asp-for="TransacccionDetalles.FechaOperacion" class="form-control form-control-sm form-control-solid" value="@(!string.IsNullOrEmpty(Model?.TransacccionDetalles.FechaOperacion) ? Convert.ToDateTime(Model?.TransacccionDetalles.FechaOperacion).ToString("yyyy-MM-dd") : "")" type="date" required />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel">Confirmar Guardado</h5>
                    <button type="button" class="close" data-dismiss="modal" id="btnCerrarModal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro que deseas guardar la información?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" id="btnCerrarModal2" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary btn-sm" id="confirmSave">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/js/transacciones/epica.transacciones.registro.js" asp-append-version="true"></script>
}