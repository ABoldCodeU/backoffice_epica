@model Epica.Web.Operacion.Models.Response.AsignarCuentaDetailsResponse

<form asp-controller="Tarjetas" asp-action="RegistrarTarjetas" id="AsignacionForm" method="post">
<div class="modal-content">
    <div class="modal-body ">
        <div class="card-body">
            <input asp-for="IdCliente" hidden class="form-control form-control-sm form-control-solid" id="idCliente" readonly value="@Model.IdCliente" type="text" autocomplete="off" />
                <div class="d-flex flex-stack row">
                    <div class="row mb-5 mt-5">
                        <div class="form-group input-group-sm col-md-12 row">
                            <label class="form-label required">Buscar Cuenta: &nbsp;</label>

                            <input type="text" id="nombreCliente" name="nombreCliente" class="form-control form-control-sm form-control-solid" placeholder="Número de Cuenta" autocomplete="off" />
                            <button type="button" class="btn btn-sm btn-primary" id="btnBuscarCliente">Buscar</button>

                        </div>
                    </div>
                </div>
                <div class="d-flex flex-stack row">
                    <div class="row mb-5 mt-5">
                        <div class="form-group input-group-sm col-md-12 row">
                            <label class="col-md-3 form-label" required>Cuenta: &nbsp;</label>
                            <div class="col-md-9">
                                <input asp-for="IdCuenta" hidden class="form-control form-control-sm form-control-solid" id="IdCuenta" readonly type="text" autocomplete="off" />
                                <input type="text" id="numeroCuenta" name="numeroCuenta" class="form-control form-control-sm form-control-solid" placeholder="Número de Cuenta" readonly autocomplete="off" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-stack row">
                    <div class="row mb-5 mt-5">
                        <div class="form-group input-group-sm col-md-12 row">
                            <label class="col-md-3 form-label" required>Rol: &nbsp;</label>
                            <div class="col-md-9">
                                <select asp-for="Rol" class="form-select form-select-sm  form-select-solid" data-placeholder="Seleccione una opción">
                                    <option></option>
                                    @foreach (var Roles in Model.ListaRoles)
                                    {
                                        <option value="@Roles.Descripcion">@Roles.Descripcion</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-stack row">
                    <div class="row mb-5 mt-5">
                        <div class="form-group input-group-sm col-md-12 row">
                            <label class="col-md-3 form-label" required>Empresa: &nbsp;</label>
                            <div class="col-md-9">
                                <select asp-for="IdEmpresa" class="form-select form-select-sm  form-select-solid" data-placeholder="Seleccione una opción">
                                    <option></option>
                                    @foreach (var Roles in Model.ListaEmpresa)
                                    {
                                        <option value="@Roles.Id">@Roles.Descripcion</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
                
    </div>
</div>
</form>


