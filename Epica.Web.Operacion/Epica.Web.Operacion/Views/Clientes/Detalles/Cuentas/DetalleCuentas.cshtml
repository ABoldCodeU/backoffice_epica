@{
    //ViewData["Title"] = "Persona Fisica";
    ViewData["Title"] = "Cuentas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section LogoPage{
    <i class="bi bi-person fs-1 w-40px"></i>
}
@section breadcrumb{
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        Cuentas
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        <a class="text-muted" asp-controller="Clientes" asp-action="Index">Clientes</a>
    </li>
}

<partial name="~/Views/Clientes/_PartialClienteHeaderDetalles.cshtml" model="@ViewBag.Info" />

<div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
    <div class="card-header cursor-pointer">
        <div class="card-title m-0">

            <div class="d-flex align-items-center position-relative my-1">
                <span class="svg-icon svg-icon-1 position-absolute ms-6">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                        <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                    </svg>
                </span>
                <input type="text" id="search_input" data-kt-customer-table-filter="search" class="form-control form-control-solid w-250px ps-15" placeholder="Buscar...">
            </div>
        </div>
        <div class="card-toolbar">
            <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                <button data-bs-toggle="modal" data-bs-target="#kt_modal_1" class="btn btn-primary me-3">
                    <i class="bi bi-plus-lg"></i>&nbsp;Nuevo
                </button>
            </div>
        </div>
    </div>
    <div class="card-body p-9">
        <div class="bottom-buffer">
            <div class="datatable datatable-bordered datatable-head-custom">
                <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_datatable">
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="kt_modal_1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Crear cuenta de ahorro</h3>
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <span class="svg-icon svg-icon-1"></span>
                </div>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-stack row mb-4">
                    <div class="row " style="text-align:-webkit-center!important">
                        <div class="form-group input-group-sm col-md-10 offset-md-1">
                            <span class="fs-5 fw-semibold text-gray-600 pb-1 d-block p-5">Seleccione el producto de ahorro de la nueva cuenta de ahorro</span>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-stack row mb-4">
                    <div class="row " style="text-align:-webkit-center!important">
                        <div class="form-group col-md-8 offset-md-2">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                                <label class="form-check-label" for="flexSwitchCheckDefault">Usar Producto de Ahorro / Producto de Ahorro Empresa</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-stack row">
                    <div class="row mb-5 mt-5">
                        <div class="form-group input-group-sm col-md-12 row">
                            <label class="col-md-3 form-label required">Producto de Ahorro: &nbsp;</label>
                            <div class="col-md-9">
                                <select class="form-select form-select2 form-select-sm form-select-solid" aria-label="Producto de Ahorro">
                                    <option>Seleccione una opción</option>
                                    <option value="1">Opcion 1</option>
                                    <option value="2">Opcion 2</option>
                                    <option value="3">Opcion 3</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-stack row">
                    <div class="row mb-5 mt-5">
                        <div class="form-group input-group-sm col-md-12 row">
                            <label class="col-md-3 form-label required">Alias de cuenta: &nbsp;</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control form-control-solid form-control-sm" placeholder="Alias de cuenta" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal" id="btnCerrarCuenta">Cerrar</button>
                <button type="button" class="btn btn-light-primary" id="GuardarCuenta">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script asp-append-version="true" src="~/js/Clientes/epica.clientes.cuentas.js"></script>
    <script asp-append-version="true" src="~/js/components/accounting.js"></script>
    <script>
        var AccountId = '@ViewBag.AccountID';
    </script>
}