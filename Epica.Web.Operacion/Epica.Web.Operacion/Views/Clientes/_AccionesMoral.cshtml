@model Epica.Web.Operacion.Models.Response.ClienteResponse
<div class="dropdown dropdown-inline">
    <a href="javascript:;" class="btn btn-sm btn-icon btn-light btn-active-light-primary me-2" data-bs-toggle="dropdown">
        <i class="bi bi-three-dots"></i>
    </a>
    <ul class="dropdown-menu menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-150px py-4">
        <li class="menu-item px-3">
            <a data-id="@Model.id" asp-controller="Clientes" asp-action="DatosGenerales" asp-route-id="@Model.id" class="btnDetalle menu-link px-3">
                <i class="bi bi-info-circle"></i>&nbsp;
                Detalle
            </a>
        </li>
        @if (Model.email != null)
        {
            <li class="menu-item px-3">
                <a data-id="@Model.email" onclick="ResetContrasenaEmail('@Model.email', @Model.id)" title="Restablecer Contraseña por Correo Electrónico" class="btnEditar menu-link px-3">
                    <i class="bi bi-envelope"></i>&nbsp;
                    <span style="font-size: 11.5px; margin-top: 5px ;">Restaurar Password/Email</span>
                </a>
            </li>
        }

        @if (Model.telefono != null)
        {
            <li class="menu-item px-3">
                <a data-id="@Model.email" onclick="ResetContrasenaTelefono('@Model.telefono', @Model.id)" title="Restablecer Contraseña por Teléfono" class="btnEditar menu-link px-3">
                    <i class="bi bi-phone"></i>&nbsp;
                    <span style="font-size: 11.5px; margin-top: 5px;">Restaurar Password/Teléfono</span>
                </a>
            </li>
        }
    </ul>
</div>