@{
    ViewData["Title"] = "Registrar tarjeta con usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section LogoPage{
    <i class=" bi bi-person-vcard fs-1 w-40px"></i>
}

@section breadcrumb{
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        <a class="text-muted" asp-controller="Tarjetas" asp-action="Index">Tarjetas</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        @ViewData["Title"]
    </li>
}

<div class="col-md-12">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">Registrar tarjeta con usuario</h3>
            <div class="separator separator-dashed border-light-secondary my-2"></div>
            <div class="card-toolbar">
                <button href="javascript:void(0)" onclick="history.back();" type="button" class="btn btn-sm btn-light-primary me-2">
                    Cancelar
                </button>
                <button type="button" class="btn btn-sm btn-light-primary" id="btnGuardarRegistroTarjeta">
                    Guardar
                </button>
            </div>
        </div>
        <div class="card-body pt-5">
            <div class="d-flex mb-6 mt-6">
                <div class="py-2 px-4 col-md-4 fv-row">
                    <label class="form-label required">Número de tarjeta: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-sm form-control-solid" type="text" />
                    </div>
                </div>
                <div class="py-2 px-4 col-md-4 fv-row">
                    <label class="form-label required">Número proxy: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-sm form-control-solid" type="text" />
                    </div>
                </div>
                <div class="py-2 px-4 col-md-4 fv-row">
                    <label class="form-label required">Mes de vigencia: &nbsp;</label>
                    <div class="position-relative">
                        <select id="mesVigencia" class="form-select form-select-sm form-select-solid" data-placeholder="Seleccione un mes"></select>
                    </div>
                </div>
            </div>

            <div class="d-flex mb-6 mt-6">
                <div class="py-2 px-4 col-md-4 fv-row">
                    <label class="form-label required">Año de vigencia: &nbsp;</label>
                    <div class="position-relative">
                        <select id="anioVigencia" class="form-select form-select-sm form-select-solid" data-placeholder="Seleccione un año"></select>
                    </div>
                </div>
                <div class="py-2 px-4 col-md-4 fv-row">
                    <label class="form-label">Cliente: &nbsp;</label>
                    <div class="position-relative">
                        <select class="form-select form-select-sm form-select-solid" data-placeholder="Seleccione un cliente">
                            <option></option>
                            <option value="cliente1">Cliente 1</option>
                            <option value="cliente2">Cliente 2</option>
                            <option value="cliente3">Cliente 3</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Tarjetas/epica.tarjetas.registroTarjetaUsuario.js" asp-append-version="true"></script>
}