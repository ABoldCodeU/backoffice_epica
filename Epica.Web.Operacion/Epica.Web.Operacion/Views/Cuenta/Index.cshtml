@{
    ViewData["Title"] = "Mis Cuentas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section LogoPage{
    <i class="bi bi-person fs-1 w-40px"></i>
}
@section breadcrumb{
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        Cuentas
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        Mis cuentas
    </li>
}

<div class="col-md-12">
    <div class="card card-flush h-lg-100">
        <div class="card-header border-0 pt-6">
            <div class="card-title">
                <div class="d-flex align-items-center position-relative my-1">
                    <span class="svg-icon svg-icon-1 position-absolute ms-6">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                            <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                        </svg>
                    </span>
                    <input type="text" id="search_input" data-kt-customer-table-filter="search" class="form-control form-control-sm w-250px ps-15" placeholder="Buscar cuenta clabe...">
                </div>
            </div>
            <div class="card-toolbar">
                <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">

                    <div class="card-toolbar">
                        <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                            <button type="button" class="btn btn-sm btn-light-primary me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                <i class="bi bi-filter"></i>&nbsp;
                                Filtrado
                            </button>
                            <div class="menu menu-sub menu-sub-dropdown w-300px w-md-500px" data-kt-menu="true" id="kt-toolbar-filter">
                                <div class="px-7 py-5">
                                    <div class="fs-4 text-dark fw-bold">Filtros</div>
                                </div>
                                <div class="separator border-gray-200"></div>
                                <div class="px-7 py-5">
                                    <div class="row">
                                        <div class="col-6">
                                            <label class="form-label fs-5 fw-semibold mb-3">Cuenta Clabe:</label>
                                            <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="cuentaClabe" placeholder="Cuenta Clabe" onkeypress="return SoloNumeros(event)" oninput="validateNumbersInput(this)" maxlength="18" id="filtro_cuenta_clabe" />
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label fs-5 fw-semibold mb-3">Número de Cuenta:</label>
                                            <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="noCuenta" onkeypress="return SoloNumeros(event)" oninput="validateNumbersInput(this)" maxlength="16" placeholder="Número de Cuenta" id="filtro_no_cuenta" />
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-6">
                                            <label class="form-label fs-5 fw-semibold mb-3">Nombre Persona:</label>
                                            <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="nombreCliente" onkeypress="return SoloLetras(event)" oninput="validateInput(this)" maxlength="40" placeholder="Nombre Persona" id="filtro_nombre_cliente" />
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label fs-5 fw-semibold mb-3">Saldo:</label>
                                            <input class="form-control form-control-sm fw-bold filtro-control" data-filtrar="saldo" type="text" min="0" step="0.01" maxlength="8" oninput="validateMontoInput(this)" pattern="\d{1,10}(?:\.\d{1,2})?$" placeholder="Saldo" id="filtro_saldo" />
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-6">
                                            <label class="form-label fs-5 fw-semibold mb-3">Estatus Cuenta:</label>
                                            <select class="form-select form-select-sm form-select-solid fw-bold filtro-control filtro-control-select" data-filtrar="estatusCuenta" data-kt-select2="true" data-placeholder="Seleciona una opción" data-allow-clear="true" id="filtro_estatus_cuenta" data-minimum-results-for-search="Infinity">
                                                <option></option>
                                                <option value="0">Activo</option>
                                                <option value="1">Desactivado</option>
                                            </select>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label fs-5 fw-semibold mb-3">Estatus Spei Out:</label>
                                            <select class="form-select form-select-sm form-select-solid fw-bold filtro-control filtro-control-select" data-filtrar="estatusSpeiOut" data-kt-select2="true" data-placeholder="Seleciona una opción" data-allow-clear="true" id="filtro_estatus_speiout" data-minimum-results-for-search="Infinity">
                                                <option></option>
                                                <option value="0">Activo</option>
                                                <option value="1">Desactivado</option>
                                            </select>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <label class="form-label fs-5 fw-semibold mb-3">Tipo de Persona:</label>
                                        <select class="form-select form-select-sm form-select-solid fw-bold filtro-control filtro-control-select" data-filtrar="tipoPersona" data-kt-select2="true" data-placeholder="Seleciona una opción" data-allow-clear="true" data-minimum-results-for-search="Infinity" id="tipo_persona" name="tipo_persona">
                                            <option></option>
                                            <option value="0">Persona Física</option>
                                            <option value="1">Persona Moral</option>
                                            <option value="2">Persona Física con Actividad Empresarial</option>
                                        </select>
                                    </div>
                                    <br />
                                    <div class="d-flex justify-content-end">
                                        <button type="reset" class="btn btn-sm btn-light btn-active-light-primary me-2 btn_limpiar_filtros" data-kt-menu-dismiss="true" data-kt-customer-table-filter="reset">Limpiar</button>
                                        <button type="submit" class="btn btn-sm btn-primary btn-filtrar" data-kt-menu-dismiss="true" data-kt-customer-table-filter="filter">Aplicar</button>
                                    </div>
                                </div>
                            </div>
                            <div class="m-0">
                                <button type="button" class="btn btn-sm btn-light-primary me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                    <i class="bi bi-download"></i>&nbsp;Descargar reporte
                                </button>
                                <div id="kt_datatable_export_menu" class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4" data-kt-menu="true">
                                    <div class="menu-item px-3">
                                        <a href="#" class="menu-link px-3" data-kt-export="excel">
                                            Exportar a Excel
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div id="kt_datatable_buttons" class="d-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="card-body pt-5">
            <div class="bottom-buffer">
                <div class="datatable datatable-bordered datatable-head-custom">
                    <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_datatable">
                        <tr data-kt-docs-datatable-subtable="subtable_template" id="subtabla" style="background-color:aliceblue" class="col-md-9 d-none subtables">
                            <td class="text-left ocultar">
                                <div class="text-dark fs-7"><strong>Número de Cuenta</strong></div>
                                <div class="text-muted fs-7 fw-bold" data-kt-docs-datatable-subtable="template_numero_cuenta"></div>
                            </td>
                            <td class="text-left">
                                <div class="text-dark fs-7"><strong>Cuenta Clabe</strong></div>
                                <div class="text-muted fs-7 fw-bold" data-kt-docs-datatable-subtable="template_cuenta_clabe"></div>
                            </td>
                            <td class="text-left">
                                <div class="text-dark fs-7"><strong>Cliente</strong></div>
                                <div class="text-muted fs-7 fw-bold" data-kt-docs-datatable-subtable="template_cliente"></div>
                            </td>
                            <td class="text-left">
                                <div class="text-dark fs-7"><strong>Número de Referencia</strong></div>
                                <div class="text-muted fs-7 fw-bold" data-kt-docs-datatable-subtable="template_numero_referencia"></div>
                            </td>
                            <td class="text-left">
                                <div class="text-dark fs-7"><strong>Medio de Pago</strong></div>
                                <div class="text-muted fs-7 fw-bold" data-kt-docs-datatable-subtable="template_medio_pago"></div>
                            </td>
                            <td class="text-left">
                                <div class="text-dark fs-7"><strong>Cuenta Medio de pago</strong></div>
                                <div class="text-muted fs-7 fw-bold" data-kt-docs-datatable-subtable="template_numero_tarjeta"></div>
                            </td>
                            <td class="text-left">
                                <div class="text-dark fs-7"><strong>Alias</strong></div>
                                <div class="text-muted fs-7 fw-bold" data-kt-docs-datatable-subtable="template_alias"></div>
                            </td>
                            <td class="text-left">
                                <div class="text-dark fs-7"><strong>Estatus</strong></div>
                                <div class="text-muted fs-7 fw-bold" data-kt-docs-datatable-subtable="template_estatus"></div>
                            </td>
                            <td class="text-left custom-cell">
                                <div class="text-dark fs-7"><strong>Fecha</strong></div>
                                <div class="text-muted fs-7 fw-bold" data-kt-docs-datatable-subtable="template_fecha"></div>
                            </td>
                        </tr>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal_detalle" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header header-modal">
                <h1 class="modal-title fs-5 text-header-modal" id="modalLabelTitle"></h1>
                <button type="button" class="custom-close-button" data-bs-dismiss="modal" aria-label="Close">
                    <span>✕</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer" style="padding:10px">
                <button type="button" class="btn btn-success btn-sm font-weight-bold" data-bs-dismiss="modal" aria-label="Close" id="btnCerrar">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script asp-append-version="true" src="~/js/components/accounting.js"></script>
    <script asp-append-version="true" src="~/js/Cuentas/epica.cuenta.index.js"></script>
    <script asp-append-version="true" src="~/js/components/utilerias.js"></script>
    <script>
        var TranID = '';
    </script>
}
<style>
    .ocultar {
        display: none;
    }
    .custom-cell {
        white-space: nowrap; /* Evita el ajuste de texto automático */
        max-width: 150px; /* Establece un ancho máximo para la celda */
    }

    table {
        text-align: left;
    }

    /* alinear verticalmente el texto al principio de la celda */
    td, th {
        vertical-align: top;
    }

    .header-modal {
        display: flex;
        text-align: center;
        justify-content: center;
    }

    .text-header-modal {
        color: white;
    }

    .custom-close-button {
        color: white;
        background-color: transparent;
        border: none;
        opacity: 1;
        padding: 0;
        font-size: 1rem;
        line-height: 1;
        cursor: pointer;
        transition: color 0.3s, opacity 0.3s;
        position: absolute;
        right: 0;
        padding: 21px;
    }

        .custom-close-button:hover {
            opacity: 0.8;
        }

    .dropdown-menu {
        position: absolute; /* Establece la posición absoluta */
        z-index: 9999; /* Establece un valor alto para el z-index para que esté por encima de la tabla */
    }

    .table-responsive,
    .dataTables_scrollBody {
        overflow: visible !important;
    }

    .table-responsive-disabled .dataTables_scrollBody {
        overflow: hidden !important;
    }
</style>